<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>macosx-${project.arch}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>Spin Tools IDE.app/Contents</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>MacOS/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <files>
        <file><source>macosx/spinide</source><fileMode>755</fileMode><outputDirectory>MacOS</outputDirectory></file>
        <file><source>macosx/spinc</source><fileMode>755</fileMode><outputDirectory>MacOS</outputDirectory></file>
        <file><source>macosx/Info.plist</source></file>
        <file><source>macosx/PkgInfo</source></file>
        <file><source>macosx/spinide.icns</source><outputDirectory>Resources</outputDirectory></file>
        <file><source>LICENSE</source><outputDirectory>Resources</outputDirectory></file>
    </files>
    <fileSets>
        <fileSet>
            <directory>examples</directory>
            <excludes>
                <exclude>**/*.binary</exclude>
            </excludes>
            <outputDirectory>MacOS/examples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>library</directory>
            <excludes>
                <exclude>**/*.binary</exclude>
            </excludes>
            <outputDirectory>MacOS/library</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>modules/runtime/target/maven-jlink/default</directory>
            <outputDirectory>MacOS/java</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
